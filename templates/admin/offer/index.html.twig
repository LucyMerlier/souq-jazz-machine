{% extends "admin/layout.html.twig" %}

{% block title %}Les petites annonces - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les petites annonces :</h1>

    <div class="d-flex">
        <a class="btn btn-success" href="{{ path('admin_offer_add') }}"><i class="fas fa-plus me-2"></i>Ajouter une petite annonce</a>
    </div>

    {% for offer in offers %}
        <div class="card mb-3 border-0 mt-5">
            <div class="row g-0">
                <div class="card-title col-md-4">
                    <h2 class="h5">À la recherche de : {{ offer.instrument.name }}</h2>
                    <p class="h5">Postée le {{ offer.createdAt|date('d/m/Y') }}</p>
                </div>
                <div class="col-md-8">
                    <div class="card-body p-0">
                        <div class="card-text">{{ offer.description }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <div class="mx-1">
                <a class="btn btn-warning" href="{{ path('admin_offer_edit', {'id': offer.id}) }}"><i class="fas fa-pen me-2"></i>Modifier</a>
            </div>
            <div class="mx-1">
                {% include "admin/offer/components/_delete_form.html.twig" %}
            </div>
        </div>
    {% else %}
        <p class="mt-5">Aucune petite annonce trouvée</p>
    {% endfor %}
{% endblock %}
