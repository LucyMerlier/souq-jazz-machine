{% extends "admin/layout.html.twig" %}

{% block title %}Les membres - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('user') }}
{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les membres du groupe :</h1>

    <div class="d-inline-block w-100">
        {% if is_granted("ROLE_ADMIN") %}
            <a class="btn btn-success float-start" href="{{ path('app_register') }}"><i class="fas fa-plus me-2"></i>Ajouter un nouveau membre</a>
        {% endif %}
        <div class="float-end">
            {{ form_start(filter_form) }}
                <div class="d-flex">
                    <div class="input-group ms-3">
                        {{ form_widget(filter_form.instrument) }}
                        <noscript>
                            <button class="btn-outline btn-outline-secondary d-flex align-items-center"><i class="fas fa-filter mx-1"></i></button>
                        </noscript>
                    </div>
                    <div class="input-group ms-3">
                        {{ form_widget(filter_form.query) }}
                        <noscript>
                            <button class="btn-outline btn-outline-secondary d-flex align-items-center"><i class="fas fa-search mx-1"></i></button>
                        </noscript>
                    </div>
                </div>
            {{ form_end(filter_form) }}
        </div>
    </div>

    <section id="membersList">
        {% include "admin/user/components/_members_list.html.twig" %}
    </section>
{% endblock %}
