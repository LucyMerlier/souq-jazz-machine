{% extends "admin/layout.html.twig" %}

{% block title %}Les instruments - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les instruments :</h1>

    <div class="d-flex">
        <a class="btn btn-success" href="{{ path('admin_instrument_add') }}">Ajouter un instrument</a>
    </div>

    {% if instruments is not empty %}
        <table class="table mt-5 mb-3">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for instrument in instruments %}
                    <tr>
                        <td>{{ instrument.name }}</td>
                        <td><a class="btn btn-warning" href="{{ path('admin_instrument_edit', {'id': instrument.id}) }}">Modifier</a></td>
                        <td>{% include "admin/instrument/components/_delete_form.html.twig" %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="mt-5">Aucun instrument trouv√©...</p>
    {% endif %}
{% endblock %}
