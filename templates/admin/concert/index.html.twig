{% extends "admin/layout.html.twig" %}

{% block title %}Calendrier - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les Concerts :</h1>

    <div class="d-flex">
        <a class="btn btn-success" href="{{ path('admin_concert_add') }}">Proposer une date</a>
    </div>

    {% if not_validated_concerts %}
        <h2 class="h4 mt-5 mb-3 text-decoration-underline">Date(s) proposée(s) :</h2>
        {% for concert in not_validated_concerts %}
            {% include "admin/concert/components/_concert_card.html.twig" with {"concert": concert} %}
        {% endfor %}
        <hr>
    {% endif %}

    <h2 class="h4 my-4 text-decoration-underline">Date(s) à venir :</h2>
    {% for concert in future_concerts %}
        {% include "admin/concert/components/_concert_card.html.twig" with {"concert": concert} %}
    {% else %}
        <p>Aucun concert trouvé :(</p>
    {% endfor %}

    <hr>

    <h2 class="h4 my-4 text-decoration-underline">Date(s) passée(s) :</h2>
    {% for concert in past_concerts %}
        {% include "admin/concert/components/_concert_card.html.twig" with {"concert": concert} %}
    {% else %}
        <p>Aucun concert trouvé :(</p>
    {% endfor %}
{% endblock %}
