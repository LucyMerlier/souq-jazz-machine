{% extends "admin/layout.html.twig" %}

{% block title %}Modifier l'album - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Modifier l'album :</h1>

    <div class="my-4">
        <a href="{{ path('admin_albums') }}">&lt;- Revenir sur la liste des albums</a>
    </div>

    {% include "admin/_form.html.twig" with {"button_label": "Modifier"} %}
    <div class="my-1">
        {% include "admin/album/components/_delete_form.html.twig" %}
    </div>

    {% if album.pictures is not empty %}
        <a href="{{ path('admin_album_show', {'id': album.id}) }}"><i class="fas fa-eye me-2"></i>Voir les {{ album.pictures|length }} photos de cet album</a>
    {% else %}
        <p>Aucune photo trouv√©e :(</p>
    {% endif %}
{% endblock %}
