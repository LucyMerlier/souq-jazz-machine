{% extends "admin/layout.html.twig" %}

{% block title %}Les photos - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les Photos de l'Album :</h1>

    <a href="{{ path('admin_albums') }}">Revenir sur la liste des albums</a>

    <h2 class="h5 my-4 text-decoration-underline">{{ album.title }} :</h2>

    {% if album.description %}
        <p>{{ album.description }}</p>
    {% endif %}

    <a class="btn btn-warning" href="{{ path('admin_album_edit', {'id': album.id}) }}">Modifier l'album</a>

    <h2 class="h5 my-4 text-decoration-underline">Ajouter des photos à l'album :</h2>

    {% include "admin/album/components/_picture_form.html.twig" %}

    {% if album.pictures is not empty %}
        <div class="d-flex mt-3">
            <div class="col-8 pe-2">
                <div id="picturesCarousel" class="carousel slide carousel-fade my-3" data-bs-ride="carousel" data-bs-interval="false">
                    <div class="carousel-inner">
                        {% for picture in album.pictures %}
                            <div class="carousel-item {{ loop.index == 1 ? 'active' }}">
                                <img class="d-block w-100 m-0" src="{{ '/uploads/albums-pictures/' ~ picture.imageUrl }}" alt="Une photo du Souq' Jazz Machine">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <div class="carousel-caption d-flex justify-content-center">
                                        <div class="mx-1">
                                            {% include "admin/album/components/_toggle_visibility_form.html.twig" %}
                                        </div>
                                        <div class="mx-1">
                                            {% include "admin/album/components/_picture_delete_form.html.twig" %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#picturesCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#picturesCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="d-flex col-4 ps-2 pt-3">
                <div class="row align-content-start">
                    {% for picture in album.pictures %}
                        <div class="col-4 pe-1 pb-1 pt-0 ps-0 m-0">
                            <a type="button" data-bs-target="#picturesCarousel" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.index == 1 ? 'active' }}" aria-current="true" aria-label="Slide {{ loop.index }}">
                                <img class="w-100 h-100 {{ picture.isVisible ? 'border border-4 border-success' }}" src="{{ '/uploads/albums-pictures/' ~ picture.imageUrl }}" alt="Une photo du Souq' Jazz Machine">
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucune photo trouvée :(</p>
    {% endif %}
{% endblock %}
