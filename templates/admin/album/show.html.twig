{% extends "admin/layout.html.twig" %}

{% block title %}Les photos - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Les Photos de l'album :</h1>

    <a class="link-dark" href="{{ path('admin_albums') }}">Revenir sur la liste des albums</a>

    <h2 class="h5 my-4 text-decoration-underline">{{ album.title }} :</h2>

    <div class="d-flex">
        <a class="btn btn-success" href="{{ path('admin_album_picture_add', {'id': album.id}) }}">Ajouter des photos</a>
    </div>
    <div class="d-flex">
        {% for picture in album.pictures %}
            <div class="col-3">
                <div class="card">
                    <div class="card-img">
                        <img class="img-fluid" src="{{ '/uploads/albums-pictures/' ~ picture.imageUrl }}" alt="Une photo du Souq' Jazz Machine">
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun album trouv√© :(</p>
        {% endfor %}
    </div>
{% endblock %}
