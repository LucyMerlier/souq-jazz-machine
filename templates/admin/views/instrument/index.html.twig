{% extends "admin/layout.html.twig" %}

{% block title %}Tous les instruments - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h1 my-4">Tous les instruments :</h1>

    <a class="btn btn-success" href="{{ path('admin_instrument_add') }}">Ajouter un instrument</a>

    {% if instruments is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for instrument in instruments %}
                    <tr>
                        <td>{{ instrument.name }}</td>
                        <td><a class="btn btn-warning" href="{{ path('admin_instrument_edit', {'id': instrument.id}) }}">Modifier</a></td>
                        <td>{% include "admin/components/instrument/_delete_form.html.twig" %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun instrument trouv√©</p>
    {% endif %}
{% endblock %}
