<div class="card mb-3 border-0">
    <div class="row g-0">
        <div class="card-title col-md-4">
            <p class="h5">{{ concert.city }}</p>
            <p class="h5">{{ concert.date|date('d/m/Y, H:i') }}</p>
            {% for rate in concert.rates %}
                <p class="h6">{{ rate.category == '' ? 'Entrée' : rate.category }} : {{ rate.price == 0 ? 'gratuite' : rate.price|number_format(2, ',', '.') ~ '€' }}</p>
            {% endfor %}
        </div>
        <div class="col-md-8">
            <div class="card-body p-0">
                <div class="card-text">{{ concert.description|raw }}</div>
            </div>
        </div>
    </div>
</div>
<hr>
