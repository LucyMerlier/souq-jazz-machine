{% extends "showcase/layout.html.twig" %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block content %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Tu est connecté·e en tant que {{ app.user.username }}. <a href="{{ path('app_logout') }}">Déconnecte-toi en cliquant ici.</a>
            </div>
        {% else %}
            <div class="mb-3">
                Tu ne fais pas parti du groupe? <a href="{{ path('showcase_home') }}">Retourne sur le site en cliquant ici.</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connecte-toi</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
    </form>
{% endblock %}
